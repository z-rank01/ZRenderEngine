{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "MSVC Debug",
      "program": "${workspaceFolder}/build/${input:buildType}/${input:executableName}.exe",
      "args": [],
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "console": "integratedTerminal"
    },
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "GDB Debug",
      "program": "${workspaceFolder}/build/${input:executableName}.exe",
      "args": [],
      "cwd": "${workspaceFolder}/build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ],
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "${input:dbgPath}"
      },
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "${input:dbgPath}"
      },
      "osx": {
        "MIMode": "gdb",
        "miDebuggerPath": "${input:dbgPath}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "LLDB Debug",
      "program": "${workspaceFolder}/build/${input:executableName}.exe",
      "args": [],
      "cwd": "${workspaceFolder}/build",
      "stopOnEntry": false
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "executableName",
      "description": "Enter executable name (without .exe)",
      "default": "VulkanEngine"
    },
    {
      "type": "pickString",
      "id": "buildType",
      "description": "Select build type (for MSVC)",
      "options": [
        "Debug",
        "Release"
      ],
      "default": "Debug"
    },
    {
      "type": "promptString",
      "id": "dbgPath",
      "description": "Enter GDB debugger path",
      "default": "C:/Program Files/msys64/ucrt64/bin/gdb.exe"
    }
  ]
}